<h3>{{{viewTitle}}}</h3>

<form action='/user' method='POST' autocomplete='on'>
    <input type="hidden" name="_id" value={{user._id}}>
    <div class="form-group col-md-6">
        <label>First Name</label>
        <input type="text" class="form-control" name="firstName" placehoder="First Name" value={{user.firstName}}>
    </div>
    <div class="form-group col-md-6">
        <label>Last Name</label>
        <input type="text" class="form-control" name="lastName" placehoder="Last Name" value={{user.lastName}}>
    </div>
    <div class="form-group col-md-6">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placehoder="Email" value={{user.email}}>
    </div>
    <div class="form-group col-md-6">
        <label>Phone</label>
        <input type="text" class="form-control" name="phone" placehoder="Phone" value={{user.phone}}>
    </div>
    <div class="form-group">
        <label>City</label>
        <input type="text" class="form-control" name="city" placehoder="City" value={{user.city}}>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
        <a class="btn btn-secondary" href="/user/list">View All</a>
    </div>
</form>